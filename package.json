{
  "name": "@editia/core",
  "version": "1.0.0",
  "description": "Core services and utilities for Editia applications - Authentication, Monetization, and Database Management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "sync-types": "ts-node scripts/sync-types.ts",
    "generate-types": "ts-node scripts/generate-types.ts",
    "prepublishOnly": "npm run build && npm test && npm run lint",
    "clean": "rm -rf dist",
    "docs": "typedoc src/index.ts --out docs/api"
  },
  "keywords": [
    "editia",
    "authentication",
    "monetization",
    "supabase",
    "clerk",
    "feature-flags",
    "usage-tracking",
    "typescript",
    "express",
    "middleware"
  ],
  "author": "Editia Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/editia/core.git"
  },
  "bugs": {
    "url": "https://github.com/editia/core/issues"
  },
  "homepage": "https://github.com/editia/core#readme",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@clerk/backend": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@supabase/supabase-js": "^2.0.0",
    "@clerk/backend": "^1.0.0",
    "express": "^4.18.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
